<Window x:Class="SimpleMealPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="384" Width="685">
    <Grid Margin="0,0,2,0">
        <ComboBox x:Name="MealOptionsDropdown" HorizontalAlignment="Left" Margin="27,65,0,0" VerticalAlignment="Top" Width="178"/>
        <Button x:Name="AddDay" Content="Add to plan" HorizontalAlignment="Left" Margin="253,65,0,0" VerticalAlignment="Top" Width="75" Click="AddDay_Click"/>
        <ListView x:Name="MealPlanDisplayer" HorizontalAlignment="Left" Height="241" Margin="27,103,0,0" VerticalAlignment="Top" Width="301">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="MealOptionInput" HorizontalAlignment="Left" Height="23" Margin="27,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178"/>
        <Button x:Name="EditOptions" Content="Edit Meals" HorizontalAlignment="Left" Margin="253,37,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.093,0.091" Click="EditMealOption_Click"/>

    </Grid>
</Window>
